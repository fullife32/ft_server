server {
    listen 80;
    listen [::]:80;
    server_name localhost;

    location / {
        root /var/www/html;
        index index.php index.html index.htm;
        autoindex on;
        try_files $uri $uri/ =404;
    }

    location /phpmyadmin {
		index index.php;

		location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|xml)$ {
				access_log off;
				expires 365d;
		}
		location ~ /\.ht {
				deny all;
		}
		location ~ /(libraries|setup/frames|setup/libs) {
				deny all;
				return 404;
		}
	}

    location /wordpress {
		index index.php;

		location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|xml)$ {
				access_log off;
				expires 365d;
		}
		location ~ /\.ht {
				deny all;
		}
	}

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
    }
}
